  "description": "Library to format, convert and work with colors.",
  "types": "./lib/types/public_api.d.ts",
  "main": "./lib/esm/public_api.js",
  "module": "./lib/esm/public_api.js",
  "exports": {
    ".": {
      "import": "./lib/esm/public_api.js",
      "types": "./lib/types/index.d.ts"
    }
